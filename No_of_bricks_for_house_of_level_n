import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        System.out.println(noofbricksforhouseofleveln(n));
    }
    public static int noofbricksforhouseofleveln(int n){
        int ans= n*(3*n+1)/2;
        return ans;
    }

}
